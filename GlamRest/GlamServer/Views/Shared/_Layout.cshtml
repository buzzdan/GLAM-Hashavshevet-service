<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Welcome to GLAM</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css2")
    @Styles.Render("~/Content/select2")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/extentions")
    @RenderSection("JavaScript", required: false)
    @RenderSection("CSS", required: false)

    @*<script src="~/Scripts/select2.min.js"></script>*@
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <div class="morph pic">
                    <p class="site-title">
                        <a href="\">
                            <img src="../../Content/images/Picture2.png" style="border: none;" width="186" height="93" />
                        </a>
                    </p>
                </div>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("בית", "Index", "Home")</li>
                        <li>@Html.ActionLink("הזמנה חדשה", "Index", "NewOrder")</li>
                        <li>@Html.ActionLink("הסטורית הזמנות", "Index", "BrowseOrders")</li>
                        <li>@Html.ActionLink("תחזית", "Index", "Forcast")</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("שינוי סיסמא", "ChangePassword", "SGAccount")</li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li>@Html.ActionLink("ניהול אבטחה", "Index", "Dashboard", new { area = "SecurityGuard" }, null)</li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p id="glamCopyright" style="color: white">&copy; @DateTime.Now.Year - Glam Software productions Inc.</p>
            </div>
        </div>
    </footer>

    @*    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)*@
</body>
</html>